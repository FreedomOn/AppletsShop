.bar{
  height: 120rpx;
  display: flex;
  font-size: 30rpx;
  width: 100%;
  justify-content: space-between;
}
.barleft{
  flex: 1;
  display: flex;
  width: 48%;

}
.barright{
  width: 48%;
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
  line-height: 120rpx;
}
.leftitem{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: white;
}
.leftitem image{
  width: 44rpx;
  height: 44rpx;
  margin-top: 20rpx;
}
.cart {
  background: #ffe817;
  flex: 1;
}

.buy {
  background: #ff5777;
  flex: 1;
  color: #fff;
}
